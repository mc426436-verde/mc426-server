entity Room {
    name String,
    description String,
    type RoomTypeEnum
}

entity Device {
    name String,
    description String,
    status DeviceStatusEnum
}

entity Action {
    status DeviceStatusEnum
}

entity Macro {
    name String,
    description String
}

enum DeviceStatusEnum {
    ON, OFF
}

enum RoomTypeEnum {
    BEDROOM, GARDEN, KITCHEN
}

relationship OneToMany {
    Room{device} to Device
}
